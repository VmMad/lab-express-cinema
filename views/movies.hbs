<div class="container moviescinema">
    <div class="movicinema">
    <h2>Ironhack Cinema</h2>
    <h3>Click on the movie to check the showtimes!</h3>

    </div>
    <div class="row">
        {{#each movies}}
        <div class="col-3 gy-5">
            <div class="card" style="width: 18rem;">        
                <a href="/movies/{{_id}}">
            <img src="{{image}}" class="card-img-top" alt="...">
                </a>
                <div class="card-body ">
                <h5 class="card-title d-flex ">{{title}}</h5>
                <a href="/movies/{{_id}}" class="btn btn-primary ">See more</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>